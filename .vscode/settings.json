{
    // ðŸ”‘ What This Does:
    // defaultInterpreterPath â†’ ensures VS Code uses the .venv inside the repo.
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // activateEnvironment â†’ makes sure your terminal inside VS Code auto-activates the environment.
    "python.terminal.activateEnvironment": true,
    // extraPaths â†’ allows imports from a future src/ folder without errors (cleaner imports).
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    // formatOnSave â†’ auto-formats Python code when saving (can plug in Black later).
    "editor.formatOnSave": true,
    // organizeImports â†’ cleans unused imports automatically.
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "liveServer.settings.port": 5501
}